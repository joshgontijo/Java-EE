<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <persistence-unit name="DYNAMIC-PU" transaction-type="JTA">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <jta-data-source>jdbc/data-processorDS</jta-data-source>
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
        <properties>
            <property name="hibernate.hbm2ddl.auto" value="none"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect"/>
            <!--            <property name="hibernate.c3p0.min_size" value="${db.hbn.c3po.min}" />
            <property name="hibernate.c3p0.max_size" value="${db.hbn.c3po.max}" />
            <property name="hibernate.c3p0.max_statements" value="${db.hbn.c3po.max_statements}" />
            <property name="hibernate.show_sql" value="true"/>-->
            <!--<property name="javax.persistence.schema-generation.database.action" value="none"/>-->
        </properties>
    </persistence-unit>
</persistence>
